generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  user_id Int @unique
  name      String
  email     String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Place     Place[]
}

model Place {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  place_id Int @unique
  name              String
  description       String
  image             String
  numberOfRooms     Int      @default(0)
  numberOfBathrooms Int      @default(0)
  maxGuests         Int      @default(0)
  priceByNight      Int      @default(0)
  hostId            Int
  cityId            Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  host User @relation(fields: [hostId], references: [user_id], onDelete: Cascade)
  city City @relation(fields: [cityId], references: [city_id], onDelete: Cascade)
}

model City {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  city_id Int @ unique
  name      String
  Place     Place[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
